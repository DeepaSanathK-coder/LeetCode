import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        System.out.println("Hello LeetCoder");

        // Define an array
        int[] numbers = {3, 5, 6, 8, 4, 2, 1};

        // Scanner for user input
        Scanner scn = new Scanner(System.in);
        System.out.println("Enter a number to add to the array:");
        
        // Check if input exists before reading it
        if (scn.hasNextInt()) {
            int input = scn.nextInt();  // Reading user input
            System.out.println("You entered: " + input);
        } else {
            System.out.println("Invalid input!");
        }

        // Pass the array to the method
        int[] resultArray = printArray(numbers);

        // Optional: Print the returned array (if you want)
        System.out.println("Returned array:");
        for (int num : resultArray) {
            System.out.print(num + " ");
        }
    }

    // Method that takes an int array and prints its elements
    public static int[] printArray(int[] arr) {
        System.out.print("Array elements: ");
        for (int num : arr) {
            System.out.print(num + " ");
        }
        System.out.println();  // To move to the next line
        return arr;
    }
}
